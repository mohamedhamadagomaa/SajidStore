@model AddItemViewModel

@{
    ViewData["Title"] = "Add ";
}

<div id="add" class="features text-center pt-5 pb-5 p-5">
    <h2 class="mt-3">تفاصيل الاضافة</h2>
    <form asp-action="Add" method="post" class="d-flex justify-content-between align-items-center w-100 flex-wrap">
      
        <div class="">
            <label class="w-100 text-center fw-bolder">إسم الصنف</label>
            <input asp-for="Name" class="form-control" placeholder="ادخل اسم الصنف" />
			<span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedItemTypeID"></label>
            <select asp-for="SelectedItemTypeID" asp-items="Model.ItemTypes" class="form-control">
                <option value="">-- Select Item Type --</option>
            </select>
            <span asp-validation-for="SelectedItemTypeID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SelectedVendorID"></label>
            <select asp-for="SelectedVendorID" asp-items="Model.Vendors" class="form-control">
                <option value="">-- Select Vendors --</option>
            </select>
            <span asp-validation-for="SelectedVendorID" class="text-danger"></span>
        </div>

        <div>
            <label class="w-100 text-center fw-bolder">الكمية</label>
            <input asp-for="Quantity" type="number" class="form-control" placeholder="ادخل الكميه" />
			<span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div>
            <label class="w-100 text-center fw-bolder">سعر الشراء</label>
            <input asp-for="PurchingPrice" type="number" step="0.01" class="form-control" placeholder="ادخل سعر الشراء" />
            <span asp-validation-for="PurchingPrice" class="text-danger"></span>
        </div>
        
        <div>
            <label class="w-100 text-center  fw-bolder">سعر البيع</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="ادخل سعر البيع" />
			<span asp-validation-for="Price" class="text-danger"></span>
        </div>

       
        <input type="submit" value="إضافة صنف" class="btn btn-success m-3 p-3 fw-bolder" />
    <a href="/Store/Store" class="btn btn-dark bottom-100">Go to Store</a>
    </form>
    <br />
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


        <script>
         $(document).ready(function() {
        // If loading via API
        $.get('/Store/ItemTypes', function(data) {
            var dropdown = $('#SelectedItemTypeID');
            dropdown.empty();
            dropdown.append('<option value="">-- Select Item Type --</option>');
            $.each(data, function(index, item) {
                dropdown.append($('<option></option>').val(item.Id).text(item.Name));
            });
        });
    });
    $(document).ready(function(){
            $.get('/Store/Vendors',function(data){
                    var dropdown = $('#SelectedVendorID');
                        dropdown.empty();
                        dropdown.append('<option value="">-- Select Vendor --</option>');
                        $.each(data,function(index,item){
                                dropdown.append($('<option></option>').val(item.Id).text(item.text))
                        });
            });
    });
        </script>
        }